{
  "manifest_version": 3,
  "name": "Date Revealer",
  "version": "1.0.0",
  "description": "Displays the posting date on supported job pages (currently Indeed). Not affiliated with any job site.",
  "permissions": [],
  "host_permissions": ["https://www.indeed.com/viewjob*"],
  "content_scripts": [
    {
      "matches": ["https://www.indeed.com/viewjob*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
